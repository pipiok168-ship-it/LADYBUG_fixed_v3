<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFD6D6"/>
            <corners android:radius="24dp"/>
            <stroke
                android:width="1dp"
                android:color="#FF9A9A"/>
            <padding
                android:left="14dp"
                android:top="12dp"
                android:right="14dp"
                android:bottom="12dp"/>
        </shape>
    </item>

    <!-- 一般狀態 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF0F0"/>
            <corners android:radius="24dp"/>
            <stroke
                android:width="1dp"
                android:color="#FFB3B3"/>
            <padding
                android:left="14dp"
                android:top="12dp"
                android:right="14dp"
                android:bottom="12dp"/>
        </shape>
    </item>

</selector>
