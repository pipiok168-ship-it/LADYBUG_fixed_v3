<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 深色背景上好看的微透明黑 -->
    <solid android:color="#0F0F0F"/>

    <!-- 香檳金描邊 -->
    <stroke
        android:width="1dp"
        android:color="#D8B56A"/>

    <!-- 圓角 -->
    <corners android:radius="16dp"/>

    <!-- 內距 -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>
